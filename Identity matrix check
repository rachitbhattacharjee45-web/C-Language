#include <stdio.h>
int main() {
    int matrix[100][100];
    int size, isIdentity = 1;
    printf("Enter size of square matrix: ");
    scanf("%d", &size);
    printf("Enter matrix elements (%dx%d):\n", size, size);
    for (int i = 0; i < size; i++) {
        for (int j = 0; j < size; j++) {
            scanf("%d", &matrix[i][j]);
        }
    }
    for (int i = 0; i < size; i++) {
        for (int j = 0; j < size; j++) {
            if (i == j && matrix[i][j] != 1) {
                isIdentity = 0;  // Diagonal element not 1
                break;
            } else if (i != j && matrix[i][j] != 0) {
                isIdentity = 0;  // Non-diagonal element not 0
                break;
            }
        }
        if (!isIdentity)
            break;
    }
    if (isIdentity)
        printf("The matrix is an Identity Matrix.\n");
    else
        printf("The matrix is NOT an Identity Matrix.\n");

    return 0;
}
