#include <stdio.h>

int main() {
    int degree1, degree2, maxDegree;
    int poly1[100] = {0}, poly2[100] = {0}, result[100] = {0};

    printf("Enter degree of first polynomial: ");
    scanf("%d", &degree1);
    printf("Enter coefficients for first polynomial (from x^0 to x^%d):\n", degree1);
    for (int i = 0; i <= degree1; i++) {
        scanf("%d", &poly1[i]);
    }

    printf("Enter degree of second polynomial: ");
    scanf("%d", &degree2);
    printf("Enter coefficients for second polynomial (from x^0 to x^%d):\n", degree2);
    for (int i = 0; i <= degree2; i++) {
        scanf("%d", &poly2[i]);
    }

    maxDegree = (degree1 > degree2) ? degree1 : degree2;
    for (int i = 0; i <= maxDegree; i++) {
        result[i] = poly1[i] + poly2[i];
    }

    printf("Resultant polynomial after addition:\n");
    for (int i = maxDegree; i >= 0; i--) {
        if (result[i] != 0) {
            if (i == 0)
                printf("%d", result[i]);
            else
                printf("%dx^%d + ", result[i], i);
        }
    }
    printf("\n");

    return 0;
}
