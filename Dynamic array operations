#include <stdio.h>
#include <stdlib.h>

int main() {
    int *arr;
    int size, i;

    printf("Enter initial size of array: ");
    scanf("%d", &size);
    arr = (int *)malloc(size * sizeof(int));
    if (arr == NULL) {
        printf("Memory allocation failed!\n");
        return 1;
    }
    printf("Enter %d elements:\n", size);
    for (i = 0; i < size; i++) {
        scanf("%d", &arr[i]);
    }
    printf("Array elements are: ");
    for (i = 0; i < size; i++) {
        printf("%d ", arr[i]);
    }
    printf("\n");
    int newSize;
    printf("Enter new size of array: ");
    scanf("%d", &newSize);
    int *temp = (int *)realloc(arr, newSize * sizeof(int));
    if (temp == NULL) {
        printf("Memory reallocation failed!\n");
        free(arr);
        return 1;
    }
    arr = temp;
    if (newSize > size) {
        printf("Enter %d new elements:\n", newSize - size);
        for (i = size; i < newSize; i++) {
            scanf("%d", &arr[i]);
        }
    }
    size = newSize;
    printf("Updated array elements are: ");
    for (i = 0; i < size; i++) {
        printf("%d ", arr[i]);
    }
    printf("\n");
    free(arr);

    return 0;
}
